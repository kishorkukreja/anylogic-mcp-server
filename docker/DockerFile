FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user early and give ownership of /app
RUN useradd -m -u 1000 mcpuser && chown -R mcpuser:mcpuser /app

# Switch to non-root user and install uv for this user
USER mcpuser
RUN curl -LsSf https://astral.sh/uv/install.sh | sh \
    && /home/mcpuser/.local/bin/uv --version

# Add uv to PATH for mcpuser
ENV PATH="/home/mcpuser/.local/bin:$PATH"

# Copy application code and change ownership
COPY --chown=mcpuser:mcpuser . .

# Clean any existing venv and install dependencies
RUN rm -rf .venv && uv sync

# Install AnyLogic Cloud client
RUN uv add https://cloud.anylogic.com/files/api-8.5.0/clients/anylogiccloudclient-8.5.0-py3-none-any.whl

# Expose port for HTTP transport
EXPOSE 8000

# Default command
CMD ["uv", "run", "python", "authenticated_mcp_server.py"]